{
  "name": "artic-language-server",
  "displayName": "AnyDSL - Artic Language Server",
  "description": "Language support for AnyDSL's Impala programming language",
  "version": "0.2.5",
  "publisher": "timgruen",
  "repository": {
    "type": "git",
    "url": "https://github.com/DFOP-HD/vscode-artic"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "anydsl",
    "impala",
    "artic",
    "language-server",
    "lsp"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:artic.json"
  ],
  "contributes": {
    "languages": [
      {
        "id": "artic",
        "aliases": [
          "Impala",
          "impala",
          "Artic",
          "artic",
          "AnyDSL",
          "anydsl"
        ],
        "extensions": [
          ".art",
          ".impala"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "artic",
        "scopeName": "source.artic",
        "path": "./syntaxes/artic.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "artic.restart",
        "title": "Restart Artic Language Server",
        "category": "Artic"
      },
      {
        "command": "artic.reloadConfig",
        "title": "Reload Artic Configuration",
        "category": "Artic"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Artic Language Server",
      "properties": {
        "artic.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Artic language server binary. If empty, will try to find 'artic' in PATH."
        },
        "artic.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Artic language server."
        },
        "artic.globalConfig": {
          "type": "string",
          "default": "",
          "description": "Path to a global artic-global.json configuration file providing shared projects and defaults."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install-local": "code --install-extension artic-language-server-*.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "files": [
    "icon.svg",
    "README.md",
    "LICENSE.md",
    "out/**",
    "node_modules/**",
    "syntaxes/**",
    "language-configuration.json",
    "artic-lsp/build/bin/artic",
    "artic-lsp/build/lib/libartic.so",
    "artic-lsp/build/lib/libthorin.so"
  ]
}
