{
  "name": "artic-language-server",
  "displayName": "AnyDSL - Artic Language Server",
  "description": "Language support for AnyDSL's programming language",
  "version": "0.4.0",
  "publisher": "timgruen",
  "repository": {
    "type": "git",
    "url": "https://github.com/DFOP-HD/vscode-artic"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "anydsl",
    "impala",
    "artic",
    "language-server",
    "lsp"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:json"
  ],
  "contributes": {
    "languages": [
      {
        "id": "artic",
        "aliases": [
          "Artic",
          "artic",
          "Impala",
          "impala",
          "AnyDSL",
          "anydsl"
        ],
        "extensions": [
          ".art",
          ".impala"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "artic",
        "scopeName": "source.artic",
        "path": "./syntaxes/artic.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "artic",
        "path": "./snippets/artic.json"
      }
    ],
    "commands": [
      {
        "command": "artic.restart",
        "title": "Restart Artic Language Server",
        "category": "Artic"
      },
      {
        "command": "artic.debugAst",
        "title": "Debug: Show AST Node at Cursor",
        "category": "Artic"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Artic Language Server",
      "properties": {
        "artic.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Artic language server binary. If empty, will try to find 'artic' in PATH."
        },
        "artic.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Artic language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "vsce package",
    "install-local": "code --install-extension artic-language-server-*.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "files": [
    "out/extension.js",
    "syntaxes/**",
    "language-configuration.json",
    "snippets/**",
    "build/bin/**",
    "docs/**",
    "README.md",
    "LICENSE.md"
  ]
}
