{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: compile",
            "type": "shell",
            "command": "source ~/.nvm/nvm.sh && npm run compile",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c"]
                }
            }
        },
        {
            "label": "npm: watch", 
            "type": "shell",
            "command": "source ~/.nvm/nvm.sh && npm run watch",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$tsc-watch",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c"]
                }
            }
        },
        {
            "label": "Build Artic LSP Server",
            "type": "shell",
            "command": "./build_lsp.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/.."
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build Extension with LSP Server",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Artic LSP Server",
                "npm: compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
